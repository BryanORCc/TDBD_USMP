<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pantallas.pantalla_registro"
    android:background="@drawable/fondo_registro"
    android:scaleX="3.0"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:scaleX="0.3"
        >
        <TextView
            android:layout_marginTop="150px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTRO DE USUARIOS"
            android:textSize="120px"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#F5F5FA"
            android:id="@+id/tvCabecera"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID..."
            android:textColorHint="#F6F6F1"
            android:layout_marginHorizontal="400px"
            android:background="@drawable/estilo_caja_texto1"
            android:layout_marginTop="100px"
            android:paddingVertical="25px"
            android:paddingHorizontal="50px"
            android:textColor="#F6F6F1"
            android:id="@+id/etID"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password..."
            android:textColorHint="#F6F6F1"
            android:layout_marginHorizontal="400px"
            android:background="@drawable/estilo_caja_texto1"
            android:layout_marginTop="100px"
            android:paddingVertical="25px"
            android:paddingHorizontal="50px"
            android:textColor="#F6F6F1"
            android:id="@+id/etPSW"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nivel de usuario..."
            android:textColorHint="#F6F6F1"
            android:layout_marginHorizontal="400px"
            android:background="@drawable/estilo_caja_texto1"
            android:layout_marginTop="100px"
            android:paddingVertical="25px"
            android:paddingHorizontal="50px"
            android:textColor="#F6F6F1"
            android:id="@+id/etNIVEL"
            />

        <Button
            android:paddingHorizontal="60px"
            android:layout_marginTop="80px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:id="@+id/btnRegistrar"
            android:background="@drawable/estilo_boton1"
            android:textColor="#E9EAF1"
            android:textStyle="bold"
            />

    </LinearLayout>

</ScrollView>